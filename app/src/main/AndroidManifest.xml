<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csgi.com.videoedittest" >

    <uses-permission android:name="android.permission.read_external_storage" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CutVideoActivity"
            android:label="@string/title_activity_cut_video" >
        </activity>
        <activity
            android:name=".DecodeEditEncodeTestActivity"
            android:label="@string/title_activity_decode_edit_encode_test" >
        </activity>
    </application>

</manifest>
